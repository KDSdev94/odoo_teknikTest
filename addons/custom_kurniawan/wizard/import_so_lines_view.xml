<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_so_lines_wizard" model="ir.ui.view">
        <field name="name">import.so.lines.wizard.form</field>
        <field name="model">import.so.lines.wizard</field>
        <field name="arch" type="xml">
            <form string="Import SO Lines">
                <group>
                    <field name="so_id" invisible="1"/>
                    <field name="import_file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_download_template" type="object" string="Download Template" class="btn-secondary"/>
                    <button name="action_import_so_lines" type="object" string="Import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_import_so_lines_wizard" model="ir.actions.act_window">
        <field name="name">Import SO Lines</field>
        <field name="res_model">import.so.lines.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
